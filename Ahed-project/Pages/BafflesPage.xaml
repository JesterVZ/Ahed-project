<Page x:Class="Ahed_project.Pages.BafflesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ahed_project.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BafflesPage">

    <Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible">
            <Grid Background="White" Width="1200" HorizontalAlignment="Left">
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal">
                        <Button Content="Calculate" Command="{Binding Calculate}"  HorizontalAlignment="Left" VerticalAlignment="Top" Width="121" Background="#fc6"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" >
                        <ComboBox Style="{StaticResource ComboboxDefault}">
                            <ComboBoxItem IsSelected="True">
                                Full baffles heat transfer calculation
                            </ComboBoxItem>
                        </ComboBox>
                        <CheckBox VerticalAlignment="Center" Content="Show Dimensions"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <StackPanel Orientation="Vertical">
                            <Label Grid.Column="1" FontWeight="Bold">Basic Baffle Geometry Relations</Label>
                            <Image Width="400" Height="400" Source="../Visual/baffles-1.png"/>
                        </StackPanel>
                        <StackPanel Orientation="Vertical">
                            <Label Grid.Column="1" FontWeight="Bold">Basic Baffle Geometry Relations</Label>
                            <Image Width="600" Height="400" Source="../Visual/baffles-2.png"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
