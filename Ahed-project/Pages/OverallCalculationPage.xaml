<Page x:Class="Ahed_project.Pages.OverallCalculationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ahed_project.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="1800"
      Title="OverallCalculationPage">

    <Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible">
            <Grid Background="White" Width="1800" HorizontalAlignment="Left">
                <StackPanel Orientation="Horizontal">
                    <StackPanel Orientation="Vertical" Width="600">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Label Grid.Column="0" FontWeight="Bold">Heat Transfer Data</Label>
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>

                            </Grid.RowDefinitions>
                            <Label Grid.Column="0" Grid.Row="0">Wall temperature</Label>
                            <TextBox Style="{StaticResource Colored}" Grid.Column="1" Grid.Row="0"/>
                            <TextBox Style="{StaticResource Colored}" Grid.Column="2" Grid.Row="0"/>

                            <Label Grid.Column="0" Grid.Row="1">Wall consistency index</Label>
                            <TextBox Style="{StaticResource Colored}" Grid.Column="1" Grid.Row="1"/>
                            <TextBox Style="{StaticResource Colored}" Grid.Column="2" Grid.Row="1"/>

                            <Label Grid.Column="0" Grid.Row="2">Nusselt</Label>
                            <TextBox Style="{StaticResource Colored}" Grid.Column="1" Grid.Row="2"/>
                            <TextBox Style="{StaticResource Colored}" Grid.Column="2" Grid.Row="2"/>

                            <Label Grid.Column="0" Grid.Row="3">K Side</Label>
                            <TextBox Style="{StaticResource Colored}" Grid.Column="1" Grid.Row="3"/>
                            <TextBox Style="{StaticResource Colored}" Grid.Column="2" Grid.Row="3"/>

                            <Label Grid.Column="0" Grid.Row="4">Fouling factor</Label>
                            <TextBox Style="{StaticResource Default}" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="4"/>

                        </Grid>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Width="300" Margin="25 26 0 0">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>

                            </Grid.RowDefinitions>
                            <TextBox Style="{StaticResource Colored}" Grid.Column="0" Grid.Row="0"/>
                            <TextBox Style="{StaticResource Colored}" Grid.Column="2" Grid.Row="0"/>

                            <TextBox Style="{StaticResource Colored}" Grid.Column="0" Grid.Row="1"/>
                            <TextBox Style="{StaticResource Colored}" Grid.Column="2" Grid.Row="1"/>

                            <TextBox Style="{StaticResource Colored}" Grid.Column="0" Grid.Row="2"/>
                            <TextBox Style="{StaticResource Colored}" Grid.Column="2" Grid.Row="2"/>

                            <TextBox Style="{StaticResource Colored}" Grid.Column="0" Grid.Row="3"/>
                            <TextBox Style="{StaticResource Colored}" Grid.Column="2" Grid.Row="3"/>

                            <TextBox Style="{StaticResource Default}" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="4"/>

                        </Grid>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
