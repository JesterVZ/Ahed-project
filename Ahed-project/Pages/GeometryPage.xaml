<Page x:Class="Ahed_project.Pages.GeometryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ahed_project.Pages"
      xmlns:customGrid ="clr-namespace:Ahed_project.UserControl"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" xmlns:SVG="http://sharpvectors.codeplex.com/svgc/"
      mc:Ignorable="d" 
      xmlns:converter="clr-namespace:Ahed_project.MasterData"
      d:DesignHeight="1600" d:DesignWidth="1200"
      Title="GeometryPage">
    <Page.Resources>
        <ResourceDictionary>
            <converter:Converter x:Key="Converter"></converter:Converter>
            <customGrid:GridLengthConverter x:Key="gridLengthConverter"/>
        </ResourceDictionary>
    </Page.Resources>

    <ScrollViewer HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible">
        <Grid Background="White" Width="1200" HorizontalAlignment="Left">

            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <Button Content="Calculate" Command="{Binding Calculate}"  HorizontalAlignment="Left" VerticalAlignment="Top" Width="121" Background="#fc6"/>
                </StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" FontWeight="Bold">Tube and Shell geometry</Label>
                    <Label Grid.Column="1" FontWeight="Bold">Tubeplate Layout</Label>
                </Grid>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="119*"/>
                            <ColumnDefinition Width="122*"/>
                            <ColumnDefinition Width="{Binding GridColumnWidth}"/>
                            <ColumnDefinition Width="120*"/>
                            <ColumnDefinition Width="120*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Label Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2">Heat Exchanger Type</Label>
                        <ComboBox ItemsSource="{Binding Exchangers}" HorizontalContentAlignment="Left" SelectedItem="{Binding ExchangersSelector, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ComboboxDefault}" Grid.Column="2" Grid.ColumnSpan="3" Grid.Row="0" SelectedIndex="0" Margin="3,3,3,3">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <Label Content="{Binding Value}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <Button IsEnabled="False" Grid.Column="0" Grid.Row="1" Content="Tubes Assistant" HorizontalAlignment="Left" VerticalAlignment="Top" Width="121" Background="#fc6" Grid.ColumnSpan="2"/>
                        <Label Grid.Column="2" Grid.Row="1" FontWeight="Bold" FontSize="14" Margin="0,0,0,36" Grid.RowSpan="2">Inner Side</Label>
                        <Label Grid.Column="3" Grid.Row="1" FontWeight="Bold" FontSize="14" Margin="0,0,0,36" Grid.RowSpan="2">Tubes side</Label>
                        <Label Grid.Column="4" Grid.Row="1" FontWeight="Bold" FontSize="14" Margin="0,0,0,36" Grid.RowSpan="2">Shell side</Label>

                        <Label Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" Margin="0,0,0,36" Grid.RowSpan="2">Name</Label>
                        <TextBox Style="{StaticResource Default}" Grid.Column="2" Grid.ColumnSpan="3" Grid.Row="2" Text="{Binding Geometry.name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="3,3,3,3"/>

                        <Label Grid.Column="0" Grid.Row="3" Margin="0,0,0,36" Grid.RowSpan="2">Outer Diameter</Label>
                        <Label Grid.Column="1" Grid.Row="3" HorizontalAlignment="Right">mm</Label>
                        <TextBox x:Name="outer_diameter_inner_side" PreviewMouseLeftButtonDown="ShowOnClick" LostFocus="LostFocus" Style="{StaticResource Default}" Text="{Binding Geometry.outer_diameter_inner_side, Converter={StaticResource Converter}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Column="2" Grid.Row="3" Margin="3,3,3,3"/>
                        <TextBox x:Name="outer_diameter_tubes_side" PreviewMouseLeftButtonDown="ShowOnClick" LostFocus="LostFocus" Style="{StaticResource Default}" Text="{Binding Geometry.outer_diameter_tubes_side, Converter={StaticResource Converter}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Column="3" Grid.Row="3" Margin="3,3,3,3"/>
                        <TextBox x:Name="outer_diameter_shell_side" PreviewMouseLeftButtonDown="ShowOnClick" LostFocus="LostFocus" Style="{StaticResource Default}" Text="{Binding Geometry.outer_diameter_shell_side, Converter={StaticResource Converter}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Column="4" Grid.Row="3" Margin="3,3,3,3"/>

                        <Label Grid.Column="0" Grid.Row="4" >Thickness</Label>
                        <Label Grid.Column="1" Grid.Row="4" HorizontalAlignment="Right">mm</Label>
                        <TextBox x:Name="thickness_inner_side" PreviewMouseLeftButtonDown="ShowOnClick" LostFocus="LostFocus" Style="{StaticResource Default}" Text="{Binding Geometry.thickness_inner_side, Converter={StaticResource Converter}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Column="2" Grid.Row="4" Margin="3,3,3,3"/>
                        <TextBox x:Name="thickness_tubes_side" PreviewMouseLeftButtonDown="ShowOnClick" LostFocus="LostFocus" Style="{StaticResource Default}" Text="{Binding Geometry.thickness_tubes_side, Converter={StaticResource Converter}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Column="3" Grid.Row="4" Margin="3,3,3,3"/>
                        <TextBox x:Name="thickness_shell_side" PreviewMouseLeftButtonDown="ShowOnClick" LostFocus="LostFocus" Style="{StaticResource Default}" Text="{Binding Geometry.thickness_shell_side, Converter={StaticResource Converter}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Column="4" Grid.Row="4" Margin="3,3,3,3"/>

                        <Label Grid.Column="0" Grid.Row="5">Inner Diameter</Label>
                        <Label Grid.Column="1" Grid.Row="5" HorizontalAlignment="Right">mm</Label>
                        <TextBox x:Name="inner_diameter_inner_side" PreviewMouseLeftButtonDown="ShowOnClick" LostFocus="LostFocus" Style="{StaticResource Colored}" Text="{Binding Geometry.inner_diameter_inner_side, Converter={StaticResource Converter}}" Grid.Column="2" Grid.Row="5" Margin="3,3,3,3"/>
                        <TextBox x:Name="inner_diameter_tubes_side" PreviewMouseLeftButtonDown="ShowOnClick" LostFocus="LostFocus" Style="{StaticResource Colored}" Text="{Binding Geometry.inner_diameter_tubes_side, Converter={StaticResource Converter}}" Grid.Column="3" Grid.Row="5" Margin="3,3,3,3"/>
                        <TextBox x:Name="inner_diameter_shell_side" PreviewMouseLeftButtonDown="ShowOnClick" LostFocus="LostFocus" Style="{StaticResource Colored}" Text="{Binding Geometry.inner_diameter_shell_side, Converter={StaticResource Converter}}" Grid.Column="4" Grid.Row="5" Margin="3,3,3,3"/>

                        <Label Grid.Column="0" Grid.Row="6" Grid.ColumnSpan="2" Margin="0,0,0,36" Grid.RowSpan="2">Material</Label>
                        <ComboBox Style="{StaticResource ComboboxDefault}" HorizontalContentAlignment="Left" SelectedItem="{Binding TubesMaterial, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ItemsSource="{Binding Materials}" Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="6" SelectedIndex="0" Margin="3,3,3,3">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <Label Content="{Binding Value.name_short}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <ComboBox Style="{StaticResource ComboboxDefault}" HorizontalContentAlignment="Left" SelectedItem="{Binding ShellMaterial, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ItemsSource="{Binding Materials}" Grid.Column="4" Grid.Row="6" SelectedIndex="0" Margin="3,3,3,3">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <Label Content="{Binding Value.name_short}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <Label Grid.Column="0" Grid.Row="7" Grid.ColumnSpan="2" Margin="0,0,0,36" Grid.RowSpan="2">Number of Tubes</Label>
                        <TextBox x:Name="number_of_tubes" PreviewMouseLeftButtonDown="ShowOnClick" LostFocus="LostFocus" Style="{StaticResource Default}" Text="{Binding Geometry.number_of_tubes, Converter={StaticResource Converter}}" Grid.Column="3" Grid.Row="7" Margin="3,3,3,3"/>

                        <Label Grid.Column="0" Grid.Row="8">Tube Inner Length</Label>
                        <Label Grid.Column="1" Grid.Row="8" HorizontalAlignment="Right">mm</Label>
                        <TextBox x:Name="tube_inner_length" PreviewMouseLeftButtonDown="ShowOnClick" LostFocus="LostFocus" Style="{StaticResource Default}" Text="{Binding Geometry.tube_inner_length, Converter={StaticResource Converter}}" Grid.Column="3" Grid.Row="8" Margin="3,3,3,3"/>

                        <Label Grid.Column="0" Grid.Row="9" Grid.ColumnSpan="2" Margin="0,0,0,36" Grid.RowSpan="2">Orientation</Label>
                        <ComboBox Style="{StaticResource ComboboxDefault}" ItemsSource="{Binding Orientations}" SelectedItem="{Binding Orientation, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Column="2" Grid.ColumnSpan="3" SelectedIndex="0" Grid.Row="9" Margin="3,3,3,3">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <Label Content="{Binding Value}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <Label Grid.Column="0" Grid.Row="10">Wetted Perimeter (per pass)</Label>
                        <Label Grid.Column="1" Grid.Row="10" HorizontalAlignment="Right">mm</Label>
                        <TextBox x:Name="wetted_perimeter_tubes_side" PreviewMouseLeftButtonDown="ShowOnClick" LostFocus="LostFocus" Style="{StaticResource Colored}" Text="{Binding Geometry.wetted_perimeter_tubes_side, Converter={StaticResource Converter}}" Grid.Column="3" Grid.Row="10" Margin="3,3,3,3"/>
                        <TextBox x:Name="wetted_perimeter_shell_side" PreviewMouseLeftButtonDown="ShowOnClick" LostFocus="LostFocus" Style="{StaticResource Colored}" Text="{Binding Geometry.wetted_perimeter_shell_side, Converter={StaticResource Converter}}" Grid.Column="4" Grid.Row="10" Margin="3,3,3,3"/>

                        <Label Grid.Column="0" Grid.Row="11">Hydraulic Diameter</Label>
                        <Label Grid.Column="1" Grid.Row="11" HorizontalAlignment="Right">mm</Label>
                        <TextBox x:Name="hydraulic_diameter_tubes_side" PreviewMouseLeftButtonDown="ShowOnClick" LostFocus="LostFocus" Style="{StaticResource Colored}" Text="{Binding Geometry.hydraulic_diameter_tubes_side, Converter={StaticResource Converter}}" Grid.Column="3" Grid.Row="11" Margin="3,3,3,3"/>
                        <TextBox x:Name="hydraulic_diameter_shell_side" PreviewMouseLeftButtonDown="ShowOnClick" LostFocus="LostFocus" Style="{StaticResource Colored}" Text="{Binding Geometry.hydraulic_diameter_shell_side, Converter={StaticResource Converter}}" Grid.Column="4" Grid.Row="11" Margin="3,3,3,3"/>

                        <Label Grid.Column="0" Grid.Row="12">Area / Module</Label>
                        <TextBlock  Grid.Column="1" Grid.Row="12" HorizontalAlignment="Right" VerticalAlignment="Center"><Run>m</Run><Run Typography.Variants="Superscript">2</Run></TextBlock>
                        <TextBox x:Name="area_module" PreviewMouseLeftButtonDown="ShowOnClick" LostFocus="LostFocus" Style="{StaticResource Colored}" Text="{Binding Geometry.area_module, Converter={StaticResource Converter}}" Grid.Column="3" Grid.Row="12" Margin="3,3,3,3"/>

                        <Label Grid.Column="0" Grid.Row="13">Volume / Module</Label>
                        <Label Grid.Column="1" Grid.Row="13" HorizontalAlignment="Right">I</Label>
                        <TextBox x:Name="volume_module_tubes_side" PreviewMouseLeftButtonDown="ShowOnClick" LostFocus="LostFocus" Style="{StaticResource Colored}" Text="{Binding Geometry.volume_module_tubes_side, Converter={StaticResource Converter}}" Grid.Column="3" Grid.Row="13" Margin="3,3,3,3"/>
                        <TextBox x:Name="volume_module_shell_side" PreviewMouseLeftButtonDown="ShowOnClick" LostFocus="LostFocus" Style="{StaticResource Colored}" Text="{Binding Geometry.volume_module_shell_side, Converter={StaticResource Converter}}" Grid.Column="4" Grid.Row="13" Margin="3,3,3,3"/>

                        <Label Grid.Column="0" Grid.Row="14" Grid.ColumnSpan="2" Margin="0,0,0,36" Grid.RowSpan="2">Tube Profile</Label>
                        <ComboBox ItemsSource="{Binding TubeProfile}" HorizontalContentAlignment="Left" SelectedItem="{Binding TubeProfileSelector, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ComboboxDefault}" Grid.Column="3" SelectedIndex="0" Grid.Row="14" Margin="3,3,3,3">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <Label Content="{Binding Value}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <Label Grid.Column="0" Grid.Row="15">Roughness</Label>
                        <Label Grid.Column="1" Grid.Row="15" HorizontalAlignment="Right">&#956;m</Label>
                        <TextBox x:Name="roughness_tubes_side" PreviewMouseLeftButtonDown="ShowOnClick" LostFocus="LostFocus" Style="{StaticResource Default}" Text="{Binding Geometry.roughness_tubes_side, Converter={StaticResource Converter}}" Grid.Column="3" Grid.Row="15" Margin="3,3,3,3"/>
                        <TextBox x:Name="roughness_shell_side" PreviewMouseLeftButtonDown="ShowOnClick" LostFocus="LostFocus" Style="{StaticResource Default}" Text="{Binding Geometry.roughness_shell_side, Converter={StaticResource Converter}}" Grid.Column="4" Grid.Row="15" Margin="3,3,3,3"/>

                        <Label Grid.Column="0" Grid.Row="16" Grid.ColumnSpan="2" Margin="0,0,0,15" Grid.RowSpan="2">Bundle type</Label>
                        <RadioButton IsChecked="{Binding Fixed, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Column="3" Grid.Row="16" GroupName="BundleType" Content="Fixed" VerticalAlignment="Center"/>
                        <RadioButton IsChecked="{Binding Removable, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Column="4" Grid.Row="16" GroupName="BundleType" Content="Removable" VerticalAlignment="Center"/>

                        <CheckBox IsChecked="{Binding RollerExpanded}" Grid.Column="3" Grid.Row="17" Content="Roller Expanded"/>
                    </Grid>
                    <Grid Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Image Source="{Binding Geometry.image_geometry, UpdateSourceTrigger=PropertyChanged}"  Grid.Column="0" Grid.Row="0">
                        </Image>
                        <Grid Grid.Column="1" Grid.Row="0">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="30"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <Label Grid.Column="0" Grid.Row="0" VerticalAlignment="Center">Tube Pitch</Label>
                            <Label Grid.Column="1" Grid.Row="0" VerticalAlignment="Center">mm</Label>
                            <Label Grid.Column="0" Grid.Row="1" VerticalAlignment="Center">Tube Layout</Label>
                            <TextBox x:Name="tube_plate_layout_tube_pitch" PreviewMouseLeftButtonDown="ShowOnClick" LostFocus="LostFocus" Style="{StaticResource Default}" Text="{Binding Geometry.tube_plate_layout_tube_pitch, Converter={StaticResource Converter}}" Grid.Column="2" Grid.Row="0"/>
                            <ComboBox ItemsSource="{Binding TubePlateLayouts}" HorizontalContentAlignment="Left" SelectedItem="{Binding TubeLayout, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ComboboxDefault}" Grid.Column="2" SelectedIndex="0" Grid.Row="1">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Image Source="{Binding Value.ImageUrl}" VerticalAlignment="Center" Width="20" Height="20"/>
                                            <Label Content="{Binding Value.Name}" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>

                            <Label Grid.Column="0" Grid.Row="2" VerticalAlignment="Center">Number of Passes</Label>
                            <TextBox x:Name="Tube_plate_layout_number_of_passes" PreviewMouseLeftButtonDown="ShowOnClick" LostFocus="LostFocus" Style="{StaticResource Default}" Text="{Binding Tube_plate_layout_number_of_passes, Converter={StaticResource Converter}, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" Grid.Column="2" Grid.Row="2"/>

                            <Label Grid.Column="0" Grid.Row="3" VerticalAlignment="Center">Div.Plate Layout</Label>
                            <ComboBox Style="{StaticResource ComboboxDefault}" HorizontalContentAlignment="Left" ItemsSource="{Binding DivPlateItems, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding DivPlateItem, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Column="2" SelectedIndex="0" Grid.Row="3">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <Label Content="{Binding Value}"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>

                            <Label Visibility="{Binding SealingTypeVis}" Grid.Column="0" Grid.Row="4" VerticalAlignment="Center">Sealing Type</Label>
                            <ComboBox Visibility="{Binding SealingTypeVis}" HorizontalContentAlignment="Left" ItemsSource="{Binding SealingTypeItems, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding SealingTypeItem, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ComboboxDefault}" Grid.Column="2" SelectedIndex="0" Grid.Row="4">
                            </ComboBox>

                            <Label Grid.Column="0" Grid.Row="5" Visibility="{Binding HousingSpaceVis, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center">Housing Space</Label>
                            <Label Grid.Column="1" Grid.Row="5" VerticalAlignment="Center">mm</Label>
                            <TextBox x:Name="HousingSpaceVis" PreviewMouseLeftButtonDown="ShowOnClick" LostFocus="LostFocus" Style="{StaticResource Colored}" Visibility="{Binding HousingSpaceVis, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" IsReadOnly="False" Text="{Binding Geometry.tube_plate_layout_housings_space, Converter={StaticResource Converter}, UpdateSourceTrigger=PropertyChanged}" Grid.Column="2" Grid.Row="5"/>

                            <Label Grid.Column="0" Grid.Row="6" VerticalAlignment="Center">Div.Plate Thickness</Label>
                            <Label Grid.Column="1" Grid.Row="6" VerticalAlignment="Center">mm</Label>
                            <TextBox x:Name="tube_plate_layout_div_plate_thickness" PreviewMouseLeftButtonDown="ShowOnClick" LostFocus="LostFocus" Style="{StaticResource Default}" Text="{Binding Geometry.tube_plate_layout_div_plate_thickness, Converter={StaticResource Converter}}" Grid.Column="2" Grid.Row="6"/>

                            <Label Grid.Column="0" Grid.Row="7" VerticalAlignment="Center">TubePlate Thickness (LTS)</Label>
                            <Label Grid.Column="1" Grid.Row="7" VerticalAlignment="Center">mm</Label>
                            <TextBox x:Name="tube_plate_layout_tubeplate_thickness" PreviewMouseLeftButtonDown="ShowOnClick" LostFocus="LostFocus" Style="{StaticResource Default}" Text="{Binding Geometry.tube_plate_layout_tubeplate_thickness, Converter={StaticResource Converter}}" Grid.Column="2" Grid.Row="7"/>

                            <Label Grid.Column="0" Grid.Row="8" VerticalAlignment="Center">Shell Cross Section</Label>
                            <TextBlock  Grid.Column="1" Grid.Row="8" HorizontalAlignment="Right" VerticalAlignment="Center"><Run>m</Run><Run Typography.Variants="Superscript">2</Run></TextBlock>
                            <TextBox x:Name="tube_plate_layout_shell_cross_section" PreviewMouseLeftButtonDown="ShowOnClick" LostFocus="LostFocus" Style="{StaticResource Colored}" Text="{Binding Geometry.tube_plate_layout_shell_cross_section, Converter={StaticResource Converter}}" Grid.Column="2" Grid.Row="8"/>

                            <Label Grid.Column="0" Grid.Row="9" VerticalAlignment="Center">Tubes Cross Section(per pass)</Label>
                            <TextBlock  Grid.Column="1" Grid.Row="9" HorizontalAlignment="Right" VerticalAlignment="Center"><Run>m</Run><Run Typography.Variants="Superscript">2</Run></TextBlock>
                            <TextBox x:Name="tube_plate_layout_tubes_cross_section_pre_pass" PreviewMouseLeftButtonDown="ShowOnClick" LostFocus="LostFocus" Style="{StaticResource Colored}" Text="{Binding Geometry.tube_plate_layout_tubes_cross_section_pre_pass, Converter={StaticResource Converter}}" Grid.Column="2" Grid.Row="9"/>

                            <Label Grid.Column="0" Grid.Row="10" VerticalAlignment="Center">Perimeter</Label>
                            <Label Grid.Column="1" Grid.Row="10" VerticalAlignment="Center">mm</Label>
                            <TextBox x:Name="tube_plate_layout_perimeter" PreviewMouseLeftButtonDown="ShowOnClick" LostFocus="LostFocus" Style="{StaticResource Colored}" Text="{Binding Geometry.tube_plate_layout_perimeter, Converter={StaticResource Converter}}" Grid.Column="2" Grid.Row="10"/>
                        </Grid>
                        <Grid Grid.Column="0" Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="38"/>
                                <RowDefinition Height="38"/>
                                <RowDefinition Height="38"/>
                                <RowDefinition Height="38"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="30"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Grid.Row="0" VerticalAlignment="Center">Max Nr.Tubes</Label>
                            <Label Grid.Column="0" Grid.Row="1" VerticalAlignment="Center">Tubes Distribution</Label>
                            <Label Grid.Column="0" Grid.Row="2" VerticalAlignment="Center">Tube-Tube Spacing</Label>
                            <Label Grid.Column="1" Grid.Row="2" VerticalAlignment="Center">mm</Label>

                            <TextBox x:Name="tube_plate_layout_max_nr_tubes" PreviewMouseLeftButtonDown="ShowOnClick" LostFocus="LostFocus" Style="{StaticResource Colored}" Text="{Binding Geometry.tube_plate_layout_max_nr_tubes, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource Converter}}" Grid.Column="2" Grid.Row="0"/>
                            <TextBox x:Name="tube_plate_layout_tube_distribution" PreviewMouseLeftButtonDown="ShowOnClick" LostFocus="LostFocus" Style="{StaticResource Colored}" Text="{Binding Geometry.tube_plate_layout_tube_distribution, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource Converter}}" Grid.Column="2" Grid.Row="1"/>
                            <TextBox x:Name="tube_plate_layout_tube_tube_spacing" PreviewMouseLeftButtonDown="ShowOnClick" LostFocus="LostFocus" Style="{StaticResource Colored}" Text="{Binding Geometry.tube_plate_layout_tube_tube_spacing, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource Converter}}" Grid.Column="2" Grid.Row="2"/>
                        </Grid>
                    </Grid>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Horizontal" Grid.Column="0">
                        <Label Grid.Column="0" FontWeight="Bold">Nozzles</Label>
                        <Button Grid.Column="0" Content="Tubes Assistant" HorizontalAlignment="Left" VerticalAlignment="Center" Width="121" Background="#fc6"/>
                    </StackPanel>

                    <Label Grid.Column="1" FontWeight="Bold">Parallel Lines Distribution Diagram (per block)</Label>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0" Height="440">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="0.3*"/>
                            <ColumnDefinition Width="{Binding Path=GridColumnWidth, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource gridLengthConverter}}"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>

                        </Grid.RowDefinitions>
                        <Label Grid.Column="0" Grid.Row="0">In Outer Diam</Label>
                        <Label Grid.Column="1" Grid.Row="0" HorizontalAlignment="Right">mm</Label>
                        <TextBox x:Name="nozzles_in_outer_diam_inner_side" PreviewMouseLeftButtonDown="ShowOnClick" LostFocus="LostFocus" Style="{StaticResource Default}" Text="{Binding Geometry.nozzles_in_outer_diam_inner_side, Converter={StaticResource Converter}}" Grid.Column="2" Grid.Row="0"/>
                        <TextBox x:Name="nozzles_in_outer_diam_tubes_side" PreviewMouseLeftButtonDown="ShowOnClick" LostFocus="LostFocus" Style="{StaticResource Default}" Text="{Binding Geometry.nozzles_in_outer_diam_tubes_side, Converter={StaticResource Converter}}" Grid.Column="3" Grid.Row="0"/>
                        <TextBox x:Name="nozzles_in_outer_diam_shell_side" PreviewMouseLeftButtonDown="ShowOnClick" LostFocus="LostFocus" Style="{StaticResource Default}" Text="{Binding Geometry.nozzles_in_outer_diam_shell_side, Converter={StaticResource Converter}}" Grid.Column="4" Grid.Row="0"/>

                        <Label Grid.Column="0" Grid.Row="1">In Thickness</Label>
                        <Label Grid.Column="1" Grid.Row="1" HorizontalAlignment="Right">mm</Label>
                        <TextBox x:Name="nozzles_in_thickness_inner_side" PreviewMouseLeftButtonDown="ShowOnClick" LostFocus="LostFocus" Style="{StaticResource Default}" Text="{Binding Geometry.nozzles_in_thickness_inner_side, Converter={StaticResource Converter}}" Grid.Column="2" Grid.Row="1"/>
                        <TextBox x:Name="nozzles_in_thickness_tubes_side" PreviewMouseLeftButtonDown="ShowOnClick" LostFocus="LostFocus" Style="{StaticResource Default}" Text="{Binding Geometry.nozzles_in_thickness_tubes_side, Converter={StaticResource Converter}}" Grid.Column="3" Grid.Row="1"/>
                        <TextBox x:Name="nozzles_in_thickness_shell_side" PreviewMouseLeftButtonDown="ShowOnClick" LostFocus="LostFocus" Style="{StaticResource Default}" Text="{Binding Geometry.nozzles_in_thickness_shell_side, Converter={StaticResource Converter}}" Grid.Column="4" Grid.Row="1"/>

                        <Label Grid.Column="0" Grid.Row="2">In Inner Diam</Label>
