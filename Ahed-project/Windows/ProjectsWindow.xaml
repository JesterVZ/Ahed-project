<Window x:Class="Ahed_project.Windows.ProjectsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ahed_project.Windows"
        DataContext="{Binding ProjectsWindowViewModel, Source={StaticResource ViewModelLocator}}"
        mc:Ignorable="d"
        Title="ProjectsWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <DataGrid ItemsSource="{Binding ProjectsCollection}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id"/>
                <DataGridTextColumn Header="UserId"/>
                <DataGridTextColumn Header="Name"/>
                <DataGridTextColumn Header="Сustomer"/>
                <DataGridTextColumn Header="Сontact"/>
                <DataGridTextColumn Header="Сustomer reference"/>
                <DataGridTextColumn Header="Description"/>
                <DataGridTextColumn Header="Category"/>
                <DataGridTextColumn Header="Keywords"/>
                <DataGridTextColumn Header="Comments"/>
            </DataGrid.Columns>
            
        </DataGrid>
    </Grid>
</Window>
